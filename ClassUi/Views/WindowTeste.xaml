<Window x:Class="ClassUi.Views.WindowTeste"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassUi.Views"
        mc:Ignorable="d"
        Title="WindowTeste" Height="450" Width="800" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Image x:Name="Image1" MinWidth="500" MinHeight="300" Margin="5"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnRetroceder" Content="Retroceder" Width="70" Height="35" Margin="5" Click="BtnRetroceder_Click"></Button>
            <Button x:Name="btnAvancar" Content="Avançar" Width="70" Height="35" Margin="5" Click="BtnAvancar_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
